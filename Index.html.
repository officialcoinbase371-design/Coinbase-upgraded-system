<body>
  <div class="card">
    <h2>Send Crypto</h2>
    <div><strong>Address</strong></div>
    <div id="addr" class="address">YOUR_ADDRESS_HERE</div>

    <button onclick="copyAddr()">Copy Address</button>

    <!-- deep link for Ethereum; update scheme for other blockchains as needed -->
    <a id="openWallet" class="btn" href="ethereum:YOUR_ADDRESS_HERE">Open in Wallet App</a>

    <!-- QR code from Google Chart API (works without extra libraries) -->
    <div>
      <img id="qr" class="qr" alt="QR code" src="" />
    </div>
    <small>Scan to send or click Open in Wallet App.</small>
  </div>

  <script>
    const address = document.getElementById('addr').textContent.trim();
    const qrImage = 'https://chart.googleapis.com/chart?chs=300x300&cht=qr&chl=' + encodeURIComponent(address);
    document.getElementById('qr').src = qrImage;
    document.getElementById('openWallet').href = 'ethereum:' + address;

    function copyAddr(){
      navigator.clipboard.writeText(address).then(() => {
        alert('Address copied to clipboard');
      }).catch(()=> {
        prompt('Copy this address:', address);
      });
    }
  </script>
</body>
</html>
