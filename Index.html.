    .card { background:#fff; padding:22px; border-radius:12px; box-shadow:0 6px 20px rgba(0,0,0,0.08); text-align:center; width:320px; }
    .address { word-break:break-all; font-size:14px; color:#111; margin:12px 0; }
    button, a.btn { display:inline-block; margin:6px 4px; padding:10px 12px; border-radius:8px; border:none; cursor:pointer; text-decoration:none; color:#fff; background:#1a73e8; }
    img.qr { width:160px; height:160px; border-radius:8px; margin-top:8px; }
    small { color:#666; display:block; margin-top:8px; }
  </style>
